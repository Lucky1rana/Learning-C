#include <stdio.h>

struct Employee {
 char name[50];
 int id;
 float salary;
};

int main() {
 struct Employee e1, e2;

 printf("Name ID Salary: ");
 scanf("%s %d %f", e1.name, &e1.id, &e1.salary);

 FILE *f = fopen("emp.dat","wb");
 if(f==NULL){ printf("err\n"); return 1; }

 fwrite(&e1, sizeof(e1), 1, f);
 fclose(f);

 f = fopen("emp.dat","rb");
 if(f==NULL){ printf("err2\n"); return 1; }

 fread(&e2, sizeof(e2), 1, f);
 fclose(f);

 printf("\nFrom File:\n");
 printf("%s %d %.2f\n", e2.name, e2.id, e2.salary);

 return 0;
}
